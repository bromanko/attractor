{
  "name": "attractor",
  "version": "0.1.0",
  "description": "A KDL workflow runner for orchestrating multi-stage AI workflows. Built from the StrongDM Software Factory NLSpecs.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "attractor": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/.bin/vitest run",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/vitest run test/integration",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["pi-package"],
  "pi": {
    "extensions": ["./src/extensions/attractor.ts"]
  },
  "license": "Apache-2.0",
  "dependencies": {
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0"
  },
  "peerDependencies": {
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": "*"
  },
  "devDependencies": {
    "@mariozechner/pi-ai": "0.52.6",
    "@mariozechner/pi-coding-agent": "0.52.6",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
