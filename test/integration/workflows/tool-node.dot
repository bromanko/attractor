// Tool node (parallelogram) executes a shell command
digraph ToolNode {
  graph [goal="Test tool execution"]
  start  [shape=Mdiamond]
  exit   [shape=Msquare]
  setup  [shape=box, prompt="Prepare environment"]
  check  [shape=parallelogram, label="Run tests", tool_command="echo TESTS_PASSED"]
  gate   [shape=diamond, label="Tests pass?"]
  report [shape=box, prompt="Generate report"]

  start -> setup -> check -> gate
  gate  -> report [condition="outcome=success"]
  gate  -> exit   [condition="outcome!=success"]
  report -> exit
}
